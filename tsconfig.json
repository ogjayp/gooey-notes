{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
  "sourceMap": true,
  "baseUrl": ".",
  "paths": {
    "@/*": [
      "renderer/src/*"
    ]
  }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


